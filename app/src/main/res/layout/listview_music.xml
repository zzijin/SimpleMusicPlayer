<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:id="@+id/line_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/text_musicindex"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="-1"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/text_musicname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="歌名"
                    android:textSize="15dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxEms="15"
                    android:textColor="#1874CD"
                    />
                <TextView
                    android:id="@+id/text_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textColor="#C6E2FF"
                    android:text="作者"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                >
                <TextView

                    android:id="@+id/text_leng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00;00"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/text_musicsize"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="0.0M"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/button_musicmore"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_more"
                android:layout_marginRight="5dp"
                android:clickable="true"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
